import acm.graphics.*;
import acm.program.*;
import java.awt.*;

public class Pyramid extends GraphicsProgram {

/** Width of each brick in pixels */
	private static final int BRICK_WIDTH = 30;

/** Width of each brick in pixels */
	private static final int BRICK_HEIGHT = 12;

/** Number of bricks in the base of the pyramid */
	//private static final int BRICKS_IN_BASE = 14;
	
	public void run() {
		double HEIGHT = (double) getHeight();
		double midx = (double) getWidth() / 2;
		for(int i= 7; i>0; i--){
			for(int j= 0; j<15;j++){
		  
		 double x1 = 7*BRICK_WIDTH-(BRICK_WIDTH/2)*i;
		 double x2 = j*BRICK_HEIGHT;
		   
	     GRect lefthalf = new GRect( midx-x1,HEIGHT-x2, BRICK_WIDTH, BRICK_HEIGHT ) ;
		   add(lefthalf);
		
		   
		  // GRect rowRight = new GRect( midx+x2, midy-BRICK_HEIGHT, BRICK_WIDTH, BRICK_HEIGHT);
		  //add (rowRight); 	
		}  
			  
			
		   
		   }
		
	}
}

